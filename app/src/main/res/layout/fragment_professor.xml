<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="graduation.trocan.academicthoughts.fragment.ProfessorFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/professor_mark_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/search_students_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/professor_mark_recycler_view"
        android:layout_alignParentEnd="true"
        android:background="#002984"
        android:src="@drawable/search_students_fab"
        android:layout_margin="16dp" />
</RelativeLayout>
